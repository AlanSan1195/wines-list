              <article class=" flex justify-center items-center">
                <div class="">
                  <img
                    src={`/${image}`}
                    alt={title}
                    class=" h-full w-full object-cover"
                  />
                </div>
                <div class="  ">
                  <h2 class=" font-bold text-3xl">{title}</h2>
                  <p class=" opacity-90">{description}</p>
                  <p class=" font-semibold">{variedad}</p>
                  <p class ="font-semibold">{graduation}</p>
                  <p class=" font-bold flex justify-end mr-8">{price}</p>
                </div>
              </article>
			
            );
          })
        }
      </div>
    </div>
  </section>
</Layout>
